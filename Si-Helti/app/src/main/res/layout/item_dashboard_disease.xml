<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@android:color/white">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.joooonho.SelectableRoundedImageView
                android:id="@+id/image_disease"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_margin="8dp"
                app:sriv_left_bottom_corner_radius="8dp"
                app:sriv_right_top_corner_radius="8dp"
                app:sriv_right_bottom_corner_radius="8dp"
                app:sriv_left_top_corner_radius="8dp"
                android:src="@drawable/img_malaria"
                android:scaleType="centerCrop"
        />
        <TextView
                android:id="@+id/tv_disease_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malaria"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/image_disease"
        />
        <TextView
                android:id="@+id/tv_disease_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/malaria_desc"
                android:textSize="10sp"
                android:maxLines="3"
                android:layout_marginRight="8dp"
                android:layout_below="@id/tv_disease_title"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/image_disease"
        />
    </RelativeLayout>
</androidx.cardview.widget.CardView>