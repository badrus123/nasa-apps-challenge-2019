<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/coordinator"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/tv_things_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:text=" List of things should you do"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.cardview.widget.CardView
            android:id="@+id/card_things"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_things_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_things"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="24dp"
                android:paddingHorizontal="8dp"/>
    </androidx.cardview.widget.CardView>
    <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin"
            app:layout_constraintTop_toBottomOf="@id/card_things"/>
</androidx.constraintlayout.widget.ConstraintLayout>